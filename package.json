{
  "name": "ydotool-composer",
  "version": "1.0.0",
  "description": "a composer for ydotool",
  "type": "module",
  "author": "Valentin Degenne <vdegenne@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "devDependencies": {
    "@material/web": "^2.4.1",
    "@snar/lit": "^1.8.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@vdegenne/about-dialog": "^0.4.2",
    "@vdegenne/forms": "^0.1.55",
    "@vdegenne/material-color-helpers": "^1.11.7",
    "@vdegenne/rollup-plugin-minify-html": "^1.0.6",
    "@vite-pwa/assets-generator": "^1.0.2",
    "custom-element-decorator": "^0.6.0",
    "lit": "^3.3.1",
    "lit-with-styles": "^2.1.3",
    "material-3-dialog": "^0.1.7",
    "material-3-prompt-dialog": "^1.0.5",
    "material-shell": "^1.3.7",
    "postcss": "^8.5.6",
    "relit": "^2.7.1",
    "rollup-plugin-material-all": "^1.2.2",
    "rollup-plugin-minify-template-literals": "^1.1.7",
    "snar": "^2.3.7",
    "snar-save-to-local-storage": "^1.0.1",
    "toastit": "^2.2.2",
    "vite": "^7.1.12",
    "vite-plugin-mdicon2svg": "^0.2.3",
    "vite-plugin-pwa": "^1.1.0",
    "wireit": "^0.14.12"
  },
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "pwa-assets": "wireit"
  },
  "wireit": {
    "generate-event-codes-json": {
      "command": "node ./scripts/input-event-codes-to-json.js",
      "files": [
        "./scripts/input-event-codes-to-json.js"
      ],
      "output": [
        "./src/input-event-codes.json"
      ]
    },
    "dev": {
      "command": "vite --host",
      "dependencies": [
        "generate-event-codes-json",
        "pwa-assets"
      ]
    },
    "build": {
      "command": "vite build",
      "dependencies": [
        "generate-event-codes-json",
        "pwa-assets"
      ]
    },
    "pwa-assets": {
      "command": "pwa-assets-generator --preset minimal-2023 --html.preset 2023 public/logo.svg",
      "files": [
        "public/logo.svg"
      ],
      "output": [
        "public/pwa-64x64.png",
        "public/pwa-192x192.png",
        "public/pwa-512x512.png",
        "public/maskable-icon-512x512.png",
        "public/apple-touch-icon-180x180.png",
        "public/favicon.ico"
      ]
    }
  }
}
